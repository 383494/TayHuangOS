OBJECTSDIR := $(OBJECTSDIR)/{SUBMODULE}/
BINDIR := $(BINDIR)/{SUBMODULE}/
{SUBMODULE_UPPER}DIR := $(ROOTDIR)/{SUBMODULE}/
export OBJECTSDIR {SUBMODULE}DIR

#编译
.PHONY: build
build:
	$(CHANGE_DIR) {SUBMODULE0} ; $(MAKE) build

#清理
.PHONY: clean
clean:
	$(CHANGE_DIR) {SUBMODULE0} ; $(MAKE) clean

.PHONY: image
image:
	$(CHANGE_DIR) {SUBMODULE0} ; $(MAKE) image